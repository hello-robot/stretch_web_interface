{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": [
        "ESNext",
        "DOM"
      ],
      "moduleResolution": "Node",
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noEmitOnError": true,
      "paths": {
        "shared/*": ["./src/shared/*"]
      },
      "typeRoots": ["src/@types"]
    },
    "include": ["src", "webpack.config.js", "src/@types"]
  }
  